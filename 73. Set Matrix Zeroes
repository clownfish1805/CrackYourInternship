class Solution {
    public void setZeroes(int[][] arr) {
        
        //TC -> O(M*N)*O(M*N) => O(2*(M*N))
        
        int n = arr.length;
        int m = arr[0].length;

        // store row & cols which are marked 0
        int[] row = new int[n];
        int[] col = new int[m];

        
        for (int i = 0; i < n; i++) {
            for (int j = 0; j < m; j++) {

                // contains zero, then mark its row and column zero
                if (arr[i][j] == 0) {
                    row[i] = 1;
                    col[j] = 1;
                }
            }
        }

        for (int i = 0; i < n; i++) {
            for (int j = 0; j < m; j++) {
                if (row[i] == 1 || col[j] == 1) //any 1 -> make it 0
                    arr[i][j] = 0;
            }
        }
    }
}
