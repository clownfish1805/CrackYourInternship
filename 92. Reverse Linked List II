class Solution {
    public ListNode reverseBetween(ListNode head, int left, int right) {

        //TC -> O(N)
        
        if(head==null || left==right){   //edge case
            return head;
        }

        ListNode dummy = new ListNode(0);   //0->head->..
        dummy.next = head;

        ListNode prev = dummy;
        
        for (int i = 0; i < left - 1; ++i) {
            prev = prev.next;
        }
        
        ListNode current = prev.next; //comes to the left node
        
        for (int i = 0; i < right - left; ++i) {
            //swapping

            ListNode nextNode = current.next;
            current.next = nextNode.next;
            nextNode.next = prev.next;
            prev.next = nextNode;
        }
        
        return dummy.next;
    }
}
