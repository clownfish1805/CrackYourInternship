class Solution {
    public boolean isPossible(long a[], long b[], int n, long k) {
     Arrays.sort(a);
     Arrays.sort(b);

    // Iterate over b[] in reverse order
    for (int i = 0, j = n - 1; i < n; i++, j--) {
        if (a[i] + b[j] < k) {
            return false; // If any pair does not satisfy the condition, return false
        }
     }
    return true;
    }
}
