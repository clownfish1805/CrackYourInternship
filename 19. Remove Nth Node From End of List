class Solution {
    public ListNode removeNthFromEnd(ListNode head, int n) {
        ListNode fast=head;
        ListNode slow=head;

        // Move fast pointer n steps ahead
        for(int i=0;i<n;i++){
            fast=fast.next;
        }

        //edge case
        if (fast == null){
            return head.next;
        }

        while(fast.next!=null){
            fast=fast.next;
            slow=slow.next;
        }

        // remove nth node from the end
        slow.next=slow.next.next;

        return head;
    }
}
